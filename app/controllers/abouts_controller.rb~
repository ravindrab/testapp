class AboutsController < ApplicationController
  # GET /aboutus
  # GET /aboutus.json
  def index
    @abouts = Aboutu.all

    respond_to do |format|
      format.html # index.html.erb
      format.json { render json: @aboutus }
    end
  end

  # GET /aboutus/1
  # GET /aboutus/1.json
  def show
    @about = Aboutu.find(params[:id])

    respond_to do |format|
      format.html # show.html.erb
      format.json { render json: @aboutu }
    end
  end

  # GET /aboutus/new
  # GET /aboutus/new.json
  def new
    @about = Aboutu.new

    respond_to do |format|
      format.html # new.html.erb
      format.json { render json: @about }
    end
  end

  # GET /aboutus/1/edit
  def edit
    @about = Aboutu.find(params[:id])
  end

  # POST /aboutus
  # POST /aboutus.json
  def create
    @about = Aboutu.new(params[:aboutu])

    respond_to do |format|
      if @about.save
        format.html { redirect_to @about, notice: 'Aboutu was successfully created.' }
        format.json { render json: @about, status: :created, location: @about }
      else
        format.html { render action: "new" }
        format.json { render json: @about.errors, status: :unprocessable_entity }
      end
    end
  end

  # PUT /aboutus/1
  # PUT /aboutus/1.json
  def update
    @about = Aboutu.find(params[:id])

    respond_to do |format|
      if @about.update_attributes(params[:aboutu])
        format.html { redirect_to @about, notice: 'Aboutu was successfully updated.' }
        format.json { head :ok }
      else
        format.html { render action: "edit" }
        format.json { render json: @about.errors, status: :unprocessable_entity }
      end
    end
  end

  # DELETE /aboutus/1
  # DELETE /aboutus/1.json
  def destroy
    @about = Aboutu.find(params[:id])
    @about.destroy

    respond_to do |format|
      format.html { redirect_to aboutus_url }
      format.json { head :ok }
    end
  end
end
